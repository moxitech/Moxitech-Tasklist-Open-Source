<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moxitech_Tasklist_Open_Source.SettingPage"
             Title="SettingPage">
    <VerticalStackLayout>
        <Grid Padding="30">
            <Label 
            Text="Настройки"
            VerticalOptions="Start" 
            HorizontalOptions="Center" />
            <Picker
                HorizontalOptions="Start"
                VerticalOptions="Start"
                x:Name="ColorPicker" Title="Выберите тему приложения"
                SelectedIndexChanged="Color_Change_Picker"
                >
                <Picker.Items>
                    <x:String>Темная тема</x:String>
                    <x:String>Светлая тема</x:String>
                    <x:String>Летняя тема</x:String>
                    <x:String>Зимняя тема</x:String>
                </Picker.Items>
            </Picker>
            <StackLayout>
                
            </StackLayout>
            <Button
            Text="Применить"
            VerticalOptions="End"
            HorizontalOptions="Start"
            Padding="10"
            />

        <Button
            VerticalOptions="End"
            HorizontalOptions="End"
            Padding="10"
            Text="Назад"
            Clicked="Back_Button_Clicked"
            />
        </Grid>
    </VerticalStackLayout>
    
</ContentPage>